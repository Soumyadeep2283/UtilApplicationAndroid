<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/specialisation_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    tools:context=".activities.SpecialisationAndDateSelectionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back_spec_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_arrow_back_white" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/labelDoctor"
            android:textColor="@android:color/white"
            android:textSize="@dimen/titleTextSize" />

    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/specialisation_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="@dimen/twentyDp"
        android:text="Specialisation *"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

    <TextView
        android:id="@+id/dropdown_specialisation_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/drawable_white_border"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:drawablePadding="@dimen/tenDp"
        android:gravity="center_vertical"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/specialisation_txt" />

    <TextView
        android:id="@+id/state_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="@dimen/twentyDp"
        android:layout_marginBottom="@dimen/twentyDp"
        android:text="State"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropdown_specialisation_type"/>

    <TextView
        android:id="@+id/dropdown_statetype"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/drawable_white_border"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:drawablePadding="@dimen/tenDp"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/eighteenSp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/state_txt"/>


    <TextView
        android:id="@+id/city_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="@dimen/twentyDp"
        android:layout_marginBottom="@dimen/twentyDp"
        android:text="City"
        android:textColor="@color/white"
        android:textSize="@dimen/eighteenSp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropdown_statetype"/>


    <TextView
        android:id="@+id/dropdown_city_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/drawable_white_border"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:drawablePadding="@dimen/tenDp"
        android:gravity="center_vertical"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/eighteenSp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_txt" />

    <Button
        android:id="@+id/btn_view_doctors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fiftyDp"
        android:background="@drawable/drawable_yellow_border"
        android:text="@string/view_docotrs"
        android:textSize="@dimen/eighteenSp"
        android:textColor="@color/colorRed"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dropdown_city_type"/>


</androidx.constraintlayout.widget.ConstraintLayout>