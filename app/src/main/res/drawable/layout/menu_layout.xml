<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/updateprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_updateprofile"
        android:textSize="@dimen/textSize"
        android:textColor="@color/colorDark"
        android:layout_margin="@dimen/twentyfiveDp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorRed"
        app:layout_constraintTop_toBottomOf="@+id/updateprofile"
        app:layout_constraintStart_toStartOf="parent"/>



    <TextView
        android:id="@+id/healthdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Details"
        android:textSize="@dimen/textSize"
        android:textColor="@color/colorDark"
        android:layout_margin="@dimen/twentyfiveDp"
        app:layout_constraintTop_toBottomOf="@id/updateprofile"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorRed"
        app:layout_constraintTop_toBottomOf="@+id/healthdetails"
        app:layout_constraintStart_toStartOf="parent"/>



    <TextView
        android:id="@+id/previous_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous_appointment"
        android:textSize="@dimen/textSize"
        android:textColor="@color/colorDark"
        android:layout_margin="@dimen/twentyfiveDp"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorRed"
        app:layout_constraintTop_toBottomOf="@+id/previous_appointment"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout_btnname"
        android:textSize="@dimen/textSize"
        android:textColor="@color/colorDark"
        android:layout_margin="@dimen/twentyfiveDp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorRed"
        app:layout_constraintTop_toBottomOf="@+id/logout"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>