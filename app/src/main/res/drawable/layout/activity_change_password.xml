<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/change_pass_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_2"
    tools:context=".activities.ChangePasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/changepass_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelChangePassword"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/textSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.167" />

            <TextView
                android:id="@+id/oldpass_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/twentyfiveDp"
                android:text="@string/label_oldpass"
                android:textSize="@dimen/textSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/changepass_txt"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/oldpass_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fiftyDp"
                android:layout_margin="@dimen/twentyfiveDp"
                android:background="@drawable/drawable_white_border"
                android:focusedByDefault="true"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/tenDp"
                android:singleLine="true"
                android:textSize="@dimen/textSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/oldpass_Txt"
                app:layout_constraintVertical_bias="0.067"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/newpass_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/twentyfiveDp"
                android:text="@string/label_newpass"
                android:textSize="@dimen/textSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/oldpass_edt"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/newpass_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fiftyDp"
                android:layout_margin="@dimen/twentyfiveDp"
                android:background="@drawable/drawable_white_border"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/tenDp"
                android:singleLine="true"
                android:textSize="@dimen/textSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newpass_txt"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/confirmpass_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/twentyfiveDp"
                android:text="@string/label_confirmpass"
                android:textSize="@dimen/textSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newpass_edt"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/confirmpass_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fiftyDp"
                android:layout_margin="@dimen/twentyfiveDp"
                android:background="@drawable/drawable_white_border"
                android:imeOptions="actionNext"
                android:paddingLeft="@dimen/tenDp"
                android:singleLine="true"
                android:textSize="@dimen/textSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/confirmpass_txt"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/change_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/twentyfiveDp"
                android:text="@string/labelRegisterButton"
                android:background="@drawable/drawable_yellow_border"
                android:textSize="@dimen/textSize"
                android:imeOptions="actionDone"
                android:textColor="@color/colorRed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/confirmpass_edt"
                app:layout_constraintVertical_bias="0.0"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>