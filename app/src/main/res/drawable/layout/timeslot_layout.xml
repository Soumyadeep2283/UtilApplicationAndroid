    <TextView
        android:id="@+id/checkbox_txt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fortyDp"
        android:layout_margin="@dimen/tenDp"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/textSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/s_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="270dp"
        android:layout_marginTop="@dimen/tenDp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="8dp"
        android:hint="Slot Type"
        android:padding="5dp"
        android:textColor="@color/colorDarkRed"
        android:textColorHint="@color/colorDark"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/view1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/checkbox_txt"
        app:layout_constraintTop_toTopOf="parent" />



    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorRed"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_txt"
        app:layout_constraintStart_toStartOf="parent"/>

